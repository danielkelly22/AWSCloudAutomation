{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DenyIncorrectEncryptionHeader",
            "Effect": "Deny",
            "Action": "s3:PutObject",
            "Resource": "*",
            "Condition": {
                "ForAllValues:StringNotEquals": {
                    "s3:x-amz-server-side-encryption": [
                        "AES256",
                        "aws:kms"
                    ]
                },
                "StringNotEquals": {
                    "aws:SourceAccount": "${public_s3_account}"
                },
                "StringNotEqualsIfExists": {
                    "aws:PrincipalTag/secure": "false"
                }
            }
        },
        {
            "Sid": "DenyUnEncryptedObjectUploads",
            "Effect": "Deny",
            "Action": "s3:PutObject",
            "Resource": "*",
            "Condition": {
                "Null": {
                    "s3:x-amz-server-side-encryption": true
                },
                "StringNotEquals": {
                    "aws:SourceAccount": "${public_s3_account}"
                },
                "StringNotEqualsIfExists": {
                    "aws:PrincipalTag/secure": "false"
                }
            }
        }
    ]
}